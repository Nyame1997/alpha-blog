<h1 class= "text-center mt-4"><%= @user.username %>'s Profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
	<% if logged_in? && @user == current_user %>
		<%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-info" %>
		<%= link_to "Delete Profile", user_path(current_user), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?"} %>
	<% end %>
</div>

<h3 class= "text-center mt-4">Articles</h3>

<div class="flickr_pagination pagination-wrapper mt-3">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination pagination-wrapper mb-3">
  <%= will_paginate @articles, :container => false %>
</div>
